.grid_12
  .border.padding
    - unless flash[:notice].nil?
      .notice= flash[:notice]
    - unless flash[:error].nil?
      .error= flash[:error]
    - form_for PersonSession.new, :url => person_session_path, :html => { :autocomplete => 'off', :class => 'login_form' } do |f|
      = f.label :email, t(:email).capitalize
      = f.text_field :email
      = f.label :password, t(:password).capitalize
      = f.password_field :password
      = f.check_box :remember_me
      = f.label :remember_me, t(:remember_me).capitalize, :class => 'remember'
      = f.submit t('log.in.action').capitalize, :class => 'submit_contact'
      .clear
