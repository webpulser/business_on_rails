- site = Site.new
- site.valid?
- form_for @site do |f|
  - [:name, :url, :description].each do |property|
    .street-input
      = label_with_required f, t("site.#{property}").humanize, property, site.errors, :style => "display: block"
      = f.text_field property
  = label_with_required f, t('site.category').humanize, :site_categories, site.errors, :style => "display: block"
  = f.select :site_category_ids, SiteCategory.roots.collect {|c| [ c.name, c.id ] }
  %fieldset
    %legend
      = t('site.images').humanize
    = link_to_function t('site.add_image').humanize, 'null'
  = f.submit t("site.#{action.downcase}.action").humanize, :action => action, :class => "backgrounds action-button"
