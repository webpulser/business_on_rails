%title
  - if @controller.controller_name == 'pages' and @page.title
    = @page.title
  - else
    = t("#{@controller.controller_name.singularize}.#{params[:action]}.title", options={})
  |
  = Setting.current.name
%meta{ 'http-equiv'=>'Content-Type', :content=>'text/html; charset=utf-8' }
%link{ :href => 'favicon.ico', :rel => 'icon', :type => 'image/x-icon' }
%link{ :href => 'favicon.ico', :rel => 'shortcut icon', :type => 'image/x-icon' }
= stylesheet_link_tag %w(front/base front/960 car)
= javascript_include_tag %w(jquery front/jquery.jcarousel.pack front/inits)
= yield :js
