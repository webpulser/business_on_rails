%title
  = t('project_name')
  - if @controller.is_a? UrlCatcherController
    = ":: #{@page.title}" if @page
  - else
    - begin
      - subtitle = t("#{@controller.controller_name.singularize}.#{params[:action]}.title", options={})
      = ":: #{subtitle}" if subtitle
    - rescue I18n::MissingTranslationData
      -#FIXME
      erf
%meta{ 'http-equiv'=>'Content-Type', :content=>'text/html; charset=utf-8' }
%link{ :href => 'favicon.ico', :rel => 'icon', :type => 'image/x-icon' }
%link{ :href => 'favicon.ico', :rel => 'shortcut icon', :type => 'image/x-icon' }
= stylesheet_link_tag %w(front/base front/960 car)
= javascript_include_tag %w(jquery front/jquery.jcarousel.pack front/inits)
= yield :js
