!!!
%html{ 'xml:lang' => 'fr', :lang => 'fr', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %title
      Business on rails
    %meta{ 'http-equiv'=>'Content-Type', :content=>'text/html; charset=utf-8' }
    %link{ :href => 'favicon.ico', :rel => 'icon', :type => 'image/x-icon' }
    %link{ :href => 'favicon.ico', :rel => 'shortcut icon', :type => 'image/x-icon' }
    = stylesheet_link_tag '/stylesheets/bor/base.css'
    = stylesheet_link_tag '/stylesheets/bor/960.css'
%body
  .container_12
    .grid_12.header.alpha
      .alpha.omega.grid_2
        .logo
      .prefix_6.grid_4.alpha.right.omega
        - [["home", "Accueil", "#"],        |
           ["account", "Mon compte", "#"],  |
           ["mail", "Contactez-nous", "#"], |
          ].each do |c, t, h|     |
          %span
            .icons{ :class => "#{c}" }
            %a.brown{ :href => "#{h}" }
              = t

      .grid_2
      - [["Ruby on Rails", "Découvrez le framework de développement agile"], |
         ["Témoignages", "Pourquoi ils ont adopté Ruby on Rails ?"],         |
         ["Annuaire", "Sites et applications réalisées avec Ruby on Rails"], |
         ["Actualités", "Dernières news autour du framework"],               |
         ["Job on Rails", "Offres et demande d’emploi d’experts"]            |
        ].each do |key, value|                                               |
        .grid_2
          .btn
            .red-button-left
            .red-button
              %a{ :href => '#' }
                = key
            .red-button-right
          %p.brown.bold{ :style => 'font-weight:1.4em;' }
            = value
  .clear
  .grid_12
    &nbsp;
  .clear
  = yield
  .container_12
    .grid_12
      .btn
        .red-button-left
        .footer.bold
          - ["A propos", "Participer", "Demander une interview", "Nous contacter", "Mentions légales"].each do |a|
            %a{ :href => "#" }
              = a
        .red-button-right

