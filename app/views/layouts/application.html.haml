!!!
%html{ 'xml:lang' => 'fr', :lang => 'fr', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %title
      Business on rails
    %meta{ 'http-equiv'=>'Content-Type', :content=>'text/html; charset=utf-8' }
    %link{ :href => 'favicon.ico', :rel => 'icon', :type => 'image/x-icon' }
    %link{ :href => 'favicon.ico', :rel => 'shortcut icon', :type => 'image/x-icon' }
      = stylesheet_link_tag '/stylesheets/bor/style.css'
  %body
    .wrapper
      .header
        %img#logo{ :alt => 'Business on Rails' }
        .menu#first-menu
          %ul
            %li.first.home
              %a{ :href => '/home' }
                Accueil
            %li.profile
              %a{ :href => '#' }
                Mon compte
            %li.last.contact
              %a{ :href => '#' }
                Contactez-nous
        - menu2 = Menu.find_by_single_key('main-menu2')
        .main-menu
          = display_menu(menu2, :li_current_class => 'active')
      .center
        = yield
        .clear

      .footer
        - footer_menu = Menu.find_by_single_key('footer-menu')
        = display_menu(footer_menu, :li_current_class => 'active')
